<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.CustomBlue.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/blue2</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="colorPrimary">@color/blue2</item>
        <item name="android:windowBackground">@color/blue2</item>
        <item name="android:colorBackground">@color/putih</item>
        <item name="colorPrimaryDark">@color/blue2</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/putih</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_font</item>
        <item name="android:textColor">@color/putihGelap1</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/blue1</item>
        <item name="colorAccent">@color/putih</item>
        <item name="android:textColorPrimary">@color/putih</item>
        <item name="android:textColorSecondary">@color/putih</item>
        <item name="android:textColor">@color/putih</item>
    </style>
</resources>
