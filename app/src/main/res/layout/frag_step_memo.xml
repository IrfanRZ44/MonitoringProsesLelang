<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/putih"
    android:paddingTop="@dimen/margin_small"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgQr"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_standard"
        app:cardElevation="@dimen/margin_standard"
        app:cardBackgroundColor="@color/gray1"
        android:layout_margin="@dimen/margin_big"
        android:layout_below="@+id/imgQr"
        android:id="@+id/cardInformasi"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/margin_standard"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="@dimen/title_big_font"
                android:textColor="@color/hitam"
                android:textStyle="bold"
                android:text="@string/informasi_contract"
                android:fontFamily="@font/open_sans"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textInformasi"
                android:layout_marginTop="@dimen/margin_standard"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="@dimen/text_font"
                android:textColor="@color/hitam"
                android:fontFamily="@font/open_sans"
                android:maxLines="2"
                android:id="@+id/textJudul"
                android:layout_marginTop="@dimen/margin_standard"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="@dimen/text_font"
                android:textColor="@color/hitam"
                android:fontFamily="@font/open_sans"
                android:maxLines="1"
                android:id="@+id/textNoRak"
                android:layout_marginTop="@dimen/margin_standard"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="@dimen/text_font"
                android:textColor="@color/hitam"
                android:fontFamily="@font/open_sans"
                android:maxLines="1"
                android:id="@+id/textLokasi"
                android:layout_marginTop="@dimen/margin_standard"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imgSupport"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/width100"
        android:layout_below="@id/cardInformasi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_big"
        android:adjustViewBounds="true"
        android:src="@drawable/dolby" />
</RelativeLayout>