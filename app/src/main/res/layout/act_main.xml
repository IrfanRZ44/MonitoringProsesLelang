<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_blue_box_horizontal"
        android:padding="@dimen/margin_standard"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/putih"
            android:textSize="@dimen/title_font"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            />
        <ImageButton
            android:layout_width="@dimen/width40"
            android:layout_height="@dimen/width40"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:src="@drawable/qr_code"
            android:background="@drawable/border_circle_transparent_gray"
            android:id="@+id/btnScan"
            />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_blue_box_horizontal"
                android:padding="@dimen/margin_standard">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/width120"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo_dolby" />

                <ImageButton
                    android:layout_width="@dimen/width40"
                    android:layout_height="@dimen/width40"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_logout"
                    android:background="@drawable/border_circle_transparent_gray"
                    android:id="@+id/btnLogout"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/rl_nama"
                    android:layout_below="@+id/img_user"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:layout_marginBottom="@dimen/width40"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/putih"
                        android:textSize="@dimen/title_font"
                        android:text="@string/halo"
                        />
                    <TextView
                        android:id="@+id/text_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/putih"
                        android:textSize="@dimen/title_font"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/margin_small"
                        />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_top"
                android:layout_marginLeft="@dimen/margin_big"
                android:layout_marginRight="@dimen/margin_big"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="@dimen/margin_standard"
                android:background="@drawable/border_rl_white"
                android:elevation="@dimen/margin_standard"
                android:orientation="vertical"
                android:padding="@dimen/margin_standard">

                <TextView
                    android:id="@+id/text_kontak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/my_contact_person"
                    android:textColor="@color/hitam"
                    android:textSize="@dimen/title_font"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/text_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/hitam"
                    android:textSize="@dimen/text_font"
                    android:drawableLeft="@drawable/ic_person_blue"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_marginBottom="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:drawableStart="@drawable/ic_person_blue"
                    android:layout_marginStart="@dimen/margin_big"
                    android:drawablePadding="@dimen/margin_small"
                    />
                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/hitam"
                    android:textSize="@dimen/text_font"
                    android:drawableLeft="@drawable/ic_phone_blue"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_marginBottom="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:drawableStart="@drawable/ic_phone_blue"
                    android:layout_marginStart="@dimen/margin_big"
                    android:drawablePadding="@dimen/margin_small"
                    />
                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/hitam"
                    android:textSize="@dimen/text_font"
                    android:drawableLeft="@drawable/ic_email_blue"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_marginBottom="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_standard"
                    android:drawableStart="@drawable/ic_email_blue"
                    android:layout_marginStart="@dimen/margin_big"
                    android:drawablePadding="@dimen/margin_small"
                    />

            </LinearLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcContract"
        android:layout_marginBottom="@dimen/margin_standard"
        />
</LinearLayout>