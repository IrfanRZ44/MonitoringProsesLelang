<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    app:cardBackgroundColor="@color/putih"
    app:cardElevation="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_standard"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_standard"
        >
        <ImageView
            android:layout_width="@dimen/width40"
            android:layout_height="@dimen/width40"
            android:id="@+id/img_user"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mail_black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_toRightOf="@+id/img_user"
            android:textColor="@color/hitam"
            android:textStyle="bold"
            android:textSize="@dimen/title_font"
            android:fontFamily="@font/open_sans"
            android:maxLines="3"
            />
        <TextView
            android:id="@+id/textTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/putihGelap3"
            android:layout_below="@+id/textTitle"
            android:layout_toRightOf="@+id/img_user"
            android:textAlignment="textStart"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="start"
            android:textSize="@dimen/text_font"
            android:maxLines="1"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>